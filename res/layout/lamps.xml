<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:background="#0000ff00" 
     android:orientation="vertical" >  
     
    <TextView  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:text="我的灯"  
        android:textColor="#ffffff"  
        android:gravity="center"
        android:textSize="25sp" />
     
     <RelativeLayout 
         android:id="@+id/RVLamp"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:visibility="gone"
          >
            
	         <Button
	            android:id="@+id/addLamp"
	            android:layout_width="100dp"
	            android:layout_height="45dp"
	            android:text="增加灯" 
	            android:textColor="#ffffff"
	            android:background="@drawable/menu_button_style"/>
         
             <Button
	            android:id="@+id/cancelLamp"
	            android:layout_width="100dp"
	            android:layout_height="45dp"
	            android:textColor="#ffffff"
	            android:text="删除灯" 
	            android:layout_toRightOf="@id/addLamp"
	        	android:layout_centerVertical="true"
	        	 android:background="@drawable/menu_button_style"
	            /> 
	            
             <Button
	            android:id="@+id/deleteLamp"
	            android:layout_width="100dp"
	            android:layout_height="45dp"
	            android:textColor="#ffffff"
	            android:text="解绑定灯" 
	            android:layout_toRightOf="@id/cancelLamp"
	        	android:layout_centerVertical="true"
	        	 android:background="@drawable/menu_button_style"
	            /> 
	         
	         
	    </RelativeLayout>
  
       
        
     <ListView
            android:id="@+id/lampsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#000000" >
     </ListView>  
  
</LinearLayout>  